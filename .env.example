# .env.example

# === Discord Bot ===
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here
TIME_INTERVAL=5  # in minutes

# === Google Sheets/Drive ===
GOOGLE_SERVICE_ACCOUNT_JSON=service-account.json
SPREADSHEET_ID=   # leave blank to create a new spreadsheet
SPREADSHEET_NAME=TeamUpdates
BACKUP_FOLDER_NAME=Backups

# === Scheduling/Backup ===
CRON_SCHEDULE=0 1 * * *  # default: every day at 1:00 AM
NOTIFY_AFTER_EXPORT=true
DISCORD_NOTIFY_CHANNEL_ID=your_notify_channel_id_here

# === Discord Server/Guild ===
DISCORD_GUILD_ID=your_discord_guild_id_here

# === Google Drive Folder IDs ===
GOOGLE_BACKUP_FOLDER_ID=your_backup_folder_id_here
GOOGLE_OTHER_FOLDER_ID=your_other_folder_id_here

# === Additional Discord Channels ===
DISCORD_UPDATE_CHANNEL_ID=your_update_channel_id_here
DISCORD_MONITOR_CHANNEL_ID=your_monitor_channel_id_here
